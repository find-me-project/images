{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "util/*": ["src/util/*"],
      "controllers/*": ["src/controllers/*"],
      "database/*": ["src/database/*"],
      "routes/*": ["src/routes/*"]
    },
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
